<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @course.title %>
</p>

<p>
  <strong>User:</strong>
  <%= @course.user.try(:email) %>
</p>

<p>
  <strong>Related Lectures:</strong>
  <%if @course.lectures%>
      <% @course.lectures.each do |c|  %>
        <h4>Content</h4>
          <%=c.content%><br>
        <h4>Attachment</h4>
         <%=link_to c.attachment ,  download_path(c) unless c.attachment.blank? %>
      <%end%>
  <%end%>
</p>

  <%if @course.user_id==current_user.id%>


<%= link_to 'Edit', edit_course_path(@course) %> |

  <%end%>

